{
    "compilerOptions": {
        "outDir": "out",
        "module": "commonjs",
        "target": "ES2019",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
			"node_modules/@types",
			"types"
        ]
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
		"node_modules",
		".vscode-test"
    ]
}

